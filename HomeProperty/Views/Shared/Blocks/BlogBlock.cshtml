@model BlogBlock


@if (Model != null && Model.BlogItems != null)
{
    <!-- Latest blog -->


    <div class="aa-latest-blog-area">
        <div class="aa-latest-blog-content">
            <div class="row">
                @foreach (var blogNews in Model.BlogItems)
                {
                    <!-- start single blog -->
                    <div class="col-md-6">
                        <article class="aa-blog-single">
                            <figure class="aa-blog-img">
                                <a href="#"><img src="@Url.ContentUrl(blogNews.BlogImage)" alt="img"></a>
                                <span class="aa-date-tag">@blogNews.BlogDate.Value.ToString("dd MMMM, yy")</span>
                            </figure>
                            <div class="aa-blog-single-content">
                                <h3><a href="#">@blogNews.BlogTitle</a></h3>
                                <p>@blogNews.BlogDescription</p>
                                <div class="aa-blog-single-bottom">
                                    <a href="#" class="aa-blog-author"><i class="fa fa-user"></i> Admin</a>
                                    <a href="#" class="aa-blog-comments"><i class="fa fa-comment-o"></i>6</a>
                                </div>
                            </div>

                        </article>
                    </div>
                    <!-- start single blog -->
                }
            </div>
        </div>
    </div>
    <!-- / Latest blog -->
}
else
{
    // Do not render
}
