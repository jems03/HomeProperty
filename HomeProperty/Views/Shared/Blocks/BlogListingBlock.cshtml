@model BlogListingBlock
@inject EPiServer.IContentLoader _contentLoader

@{
    var blogPages = Model.BlogSinglePages
        .Select(blogPage => _contentLoader.Get<BlogSinglePage>(blogPage))
        .Where(blogPage => blogPage != null)
        .OrderByDescending(blogPage => blogPage.BlogSingleDate)
        .ToList();
}

<!-- Start Blog  -->
<section id="aa-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="aa-blog-area">
                    <div class="aa-blog-content">

                        <div class="row">
                            @if (blogPages != null && blogPages.Count() > 0)
                            {
                                @foreach (var blogSinglePage in blogPages)
                                {

                                    <div class="col-md-6 col-sm-6">
                                        <article class="aa-blog-single">
                                            <figure class="aa-blog-img">
                                                <a href="#"><img alt="img" src="@Url.ContentUrl(blogSinglePage.BlogSingleImage)"></a>
                                                <span class="aa-date-tag">@blogSinglePage.BlogSingleDate.ToString("dd MMMM, yy")</span>
                                            </figure>
                                            <div class="aa-blog-single-content">
                                                <h3><a href="#">@blogSinglePage.BlogSingleTitle</a></h3>
                                                @Html.PropertyFor(m => blogSinglePage.BlogSingleDescription)
                                                <div class="aa-blog-single-bottom">
                                                    <a class="aa-blog-author" href="#"><i class="fa fa-user"></i>@blogSinglePage.BlogSingleAuthor</a>
                                                    <a class="aa-blog-comments" href="#"><i class="fa fa-comment-o"></i>6</a>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                }
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- / Blog  -->