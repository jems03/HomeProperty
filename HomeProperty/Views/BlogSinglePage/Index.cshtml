@model IPageViewModel<BlogSinglePage>

@{
    var commentCount = Model.CurrentPage.BlogComments.Count();
    var commentText = commentCount <= 1 ? "Comment" : "Comments";
}

<!-- Start Property header  -->
<section id="aa-property-header" style="background-image:url(@Url.ContentUrl(Model.CurrentPage.MainSectionImageUrl))">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-property-header-inner">
                    <h2>@Model.CurrentPage.MetaTitle</h2>
                    <ol class="breadcrumb">
                        <li><a href="#">HOME</a></li>
                        <li class="active">@Model.CurrentPage.MetaTitle</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Property header  -->

<section id="aa-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-blog-area">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="aa-blog-content">
                                <div class="row">
                                    <div class="col-md-12">
                                        <article class="aa-blog-single aa-blog-details">
                                            <figure class="aa-blog-img">
                                                <a href="#"><img alt="img" src="@((Model.CurrentPage.BlogSingleImage != null) ? Url.ContentUrl(Model.CurrentPage.BlogSingleImage) : Url.Content("~/img/slider/1.jpg"))" /></a>
                                                <span class="aa-date-tag">@Model.CurrentPage.BlogSingleDate.ToString("dd MMMM, yy")</span>
                                            </figure>
                                            <div class="aa-blog-single-content">
                                                <h2>@Html.PropertyFor(m => m.CurrentPage.BlogSingleTitle)</h2>
                                                <div class="aa-blog-single-bottom">
                                                    <a class="aa-blog-author" href="#"><i class="fa fa-user"></i>@Html.PropertyFor(m => m.CurrentPage.BlogSingleAuthor)</a>
                                                    <a class="aa-blog-comments" href="#"><i class="fa fa-comment-o"></i>@commentCount</a>
                                                </div>
                                                @Html.PropertyFor(m => m.CurrentPage.BlogSingleDescription)
                                                <blockquote>
                                                    @Html.PropertyFor(m => m.CurrentPage.BlogSingleQuote)
                                                </blockquote>
                                                @Html.PropertyFor(m => m.CurrentPage.BlogSingleAdditionalRemarks)

                                            </div>
                                        </article>
                                    </div>
                                    <!-- Post tags -->
                                    <div class="col-md-12">
                                        <div class="aa-blog-post-tag">
                                            <ul>
                                                <li>TAGES:</li>
                                                <li><a href="#">POPERTY,</a></li>
                                                <li><a href="#">LAND,</a></li>
                                                <li><a href="#">FLAT,</a></li>
                                                <li><a href="#">RENT,</a></li>
                                                <li><a href="#">SALE,</a></li>
                                                <li><a href="#">OFFICE</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- Social Share -->
                                    <div class="col-md-12">
                                        <div class="aa-properties-social">
                                            <ul>
                                                <li>Share</li>
                                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- post navigation -->
                                    <div class="col-md-12">
                                        <div class="aa-blog-navigation">
                                            <div class="aa-blog-pagination-left">
                                                <a href="#" class="aa-prev">
                                                    <span class="fa fa-angle-double-left">
                                                    </span>
                                                    PREV
                                                </a>
                                            </div>
                                            <div class="aa-blog-pagination-right">
                                                <a href="#" class="aa-next">
                                                    NEXT
                                                    <span class="fa fa-angle-double-right">
                                                    </span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Related blog post -->
                                    <div class="col-md-12">
                                        <div class="aa-blog-related-post">
                                            <div class="aa-title">
                                                <h2>Related Post</h2>
                                                <span></span>
                                            </div>
                                            <div class="aa-blog-related-post-area">
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-6">
                                                        <article class="aa-blog-single">
                                                            <figure class="aa-blog-img">
                                                                <a href="#"><img src="/img/blog-img-1.jpg" alt="img"></a>
                                                                <span class="aa-date-tag">15 April, 16</span>
                                                            </figure>
                                                            <div class="aa-blog-single-content">
                                                                <h3><a href="#">Lorem ipsum dolor sit amet, consectetur.</a></h3>
                                                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Optio est quaerat magnam exercitationem voluptas, voluptatem sed quam ab laborum voluptatum tempore dolores itaque, molestias vitae.</p>
                                                                <div class="aa-blog-single-bottom">
                                                                    <a href="#" class="aa-blog-author"><i class="fa fa-user"></i> Admin</a>
                                                                    <a href="#" class="aa-blog-comments"><i class="fa fa-comment-o"></i>6</a>
                                                                </div>
                                                            </div>
                                                        </article>
                                                    </div>
                                                    <div class="col-md-6 col-sm-6">
                                                        <article class="aa-blog-single">
                                                            <figure class="aa-blog-img">
                                                                <a href="#"><img src="/img/blog-img-2.jpg" alt="img"></a>
                                                                <span class="aa-date-tag">15 April, 16</span>
                                                            </figure>
                                                            <div class="aa-blog-single-content">
                                                                <h3><a href="#">Lorem ipsum dolor sit amet, consectetur.</a></h3>
                                                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Optio est quaerat magnam exercitationem voluptas, voluptatem sed quam ab laborum voluptatum tempore dolores itaque, molestias vitae.</p>
                                                                <div class="aa-blog-single-bottom">
                                                                    <a href="#" class="aa-blog-author"><i class="fa fa-user"></i> Admin</a>
                                                                    <a href="#" class="aa-blog-comments"><i class="fa fa-comment-o"></i>6</a>
                                                                </div>
                                                            </div>
                                                        </article>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- comment threads -->
                                    <div class="col-md-12">
                                        <div class="aa-comments-area">
                                            <h3>@commentCount @commentText</h3>
                                            <div class="comments">

                                                @if (commentCount > 0)
                                                {
                                                    <ul class="commentlist">
                                                        @foreach(var comment in Model.CurrentPage.BlogComments.Where(c => c.BlogId == Context.GetContentLink().ID))
                                                        {
                                                            <li>
                                                                <div class="media">
                                                                    <div class="media-left">
                                                                        <img alt="img" src="/img/testimonial-1.png" class="media-object news-img">
                                                                    </div>
                                                                    <div class="media-body">
                                                                        <h4 class="author-name">@comment.Name</h4>
                                                                        <span class="comments-date"> @comment.CommentDate</span>
                                                                        <p>@comment.Comments</p>
                                                                        <a class="reply-btn" href="#">Reply</a>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                        }
                                                        
                                                        
                                                    </ul>
                                                    <!-- comments pagination -->
                                                    <nav>
                                                        <ul class="pagination comments-pagination">
                                                            <li>
                                                                <a aria-label="Previous" href="#">
                                                                    <span aria-hidden="true">«</span>
                                                                </a>
                                                            </li>
                                                            <li><a href="#">1</a></li>
                                                            <li><a href="#">2</a></li>
                                                            <li><a href="#">3</a></li>
                                                            <li><a href="#">4</a></li>
                                                            <li><a href="#">5</a></li>
                                                            <li>
                                                                <a aria-label="Next" href="#">
                                                                    <span aria-hidden="true">»</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </nav>
                                                }


                                            </div>
                                        </div>
                                    </div>
                                    <!-- Respond box -->

                                    <div id="respond">
                                        <h3 class="reply-title">Leave a Comment</h3>
                                        <form id="commentform" asp-controller="BlogSinglePageController" asp-action="SubmitComment">
                                            <p class="comment-notes">
                                                Your email address will not be published. Required fields are marked <span class="required">*</span>
                                            </p>
                                            <p class="comment-form-author">
                                                <label for="author">Name <span class="required">*</span></label>
                                                <input type="text" required="required" size="30" value="" name="author">
                                            </p>
                                            <p class="comment-form-email">
                                                <label for="email">Email <span class="required">*</span></label>
                                                <input type="email" required="required" aria-required="true" value="" name="email">
                                            </p>
                                            <p class="comment-form-url">
                                                <label for="url">Website</label>
                                                <input type="url" value="" name="url">
                                            </p>
                                            <p class="comment-form-comment">
                                                <label for="comment">Comment</label>
                                                <textarea required="required" aria-required="true" rows="8" cols="45" name="comment"></textarea>
                                            </p>                                         
                                            <p class="form-submit">
                                                <input type="submit" value="Post Comment" class="aa-browse-btn" name="submit">
                                            </p>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- Start blog sidebar -->
                        <div class="col-md-4">
                            @Html.PropertyFor(m => m.CurrentPage.BlogSideBar)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>